mortgage <- function(n, P, open){
if(open){
i <- 0.005
} else {
i <- 0.004
}
R <- P*i/(1-(1+i)^(-n))
return(R)
}
mortgage(3,5,TRUE)
mortgage(3,5,FALSE)
